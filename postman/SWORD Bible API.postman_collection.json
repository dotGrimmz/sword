{
  "info": {
    "name": "SWORD Bible API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing the Bible API endpoints exposed by the SWORD app."
  },
  "item": [
    {
      "name": "Get All Translations",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/bible/translations",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "translations"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get All Books (WEB)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/bible/books?translation=WEB",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "books"
          ],
          "query": [
            {
              "key": "translation",
              "value": "WEB"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Chapter (Genesis 1)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/bible/Genesis/1?translation=WEB",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "Genesis",
            "1"
          ],
          "query": [
            {
              "key": "translation",
              "value": "WEB"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Chapter (Esther 1)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/bible/Esther/1?translation=WEB",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "Esther",
            "1"
          ],
          "query": [
            {
              "key": "translation",
              "value": "WEB"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Search (faith)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/bible/search?q=faith&translation=WEB&limit=25",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "search"
          ],
          "query": [
            {
              "key": "q",
              "value": "faith"
            },
            {
              "key": "translation",
              "value": "WEB"
            },
            {
              "key": "limit",
              "value": "25"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "List Notes",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user/notes",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "notes"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create Note",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"translationId\": \"WEB\",\n  \"bookId\": null,\n  \"chapter\": 1,\n  \"verseStart\": 1,\n  \"verseEnd\": 3,\n  \"body\": \"In the beginning...\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/user/notes",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "notes"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Update Note",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"body\": \"Updated note text\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/user/notes/{{noteId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "notes",
            "{{noteId}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Delete Note",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user/notes/{{noteId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "notes",
            "{{noteId}}"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "noteId",
      "value": ""
    },
    {
      "key": "userId",
      "value": "mock-user-123"
    }
  ]
}
