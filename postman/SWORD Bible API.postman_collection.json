          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "bookmarks"
          ]
        },
        "description": "Fetch all bookmarks for the authenticated user. Response entries include id, bookId, chapter, verse, label, createdAt."
      },
      "response": []
    },
    {
      "name": "Create Bookmark",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authAccessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bookId\": \"{{bookmarkBookId}}\",\n  \"chapter\": 1,\n  \"verse\": 1,\n  \"label\": \"Favorite verse\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/user/bookmarks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user",
            "bookmarks"
          ]
        },
        "description": "Create or update a bookmark for the specified book and chapter. Response does not include updatedAt."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.id) {",
              "  pm.collectionVariables.set('bookmarkId', json.id);",
              "}",
              "if (json && json.bookId) {",
              "  pm.collectionVariables.set('bookmarkBookId', json.bookId);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
