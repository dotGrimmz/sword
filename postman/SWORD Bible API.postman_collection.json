{
  "info": {
    "name": "SWORD Bible API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing the Bible API endpoints exposed by the SWORD app."
  },
  "item": [
    {
      "name": "Get All Translations",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/bible/translations",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bible",
            "translations"
          ]
        }
      },
      "response": []
    },
